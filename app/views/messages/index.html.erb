<h1>Chat</h1>

<%= @messages.size.inspect %>

<ul id="chat">
  <% @messages.each {|message| %>
  <li>
    <span class="created_at"><%= message.created_at.strftime("%H:%M") %></span>
    <%= message.content %>
  </li>
<% } %>

</ul>

<%= form_for Message.new, remote: true do |f| %>
  <%= f.text_field :content %>
  <%= f.submit "Send" %>
<% end %>
